<?xml version="1.0" encoding="utf-8"?>
<!-- Incoming message bubble -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:paddingTop="14dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:gravity="start">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_container"
        android:orientation="vertical"
        android:layout_marginEnd="60dp"
        android:background="@drawable/message_bubble_incoming"
        android:padding="12dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_gravity="start">

        <!-- Spam badge at top center, half inside, half outside -->
        <LinearLayout
            android:id="@+id/message_spam_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-18dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_spam_badge"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_warning"
                android:layout_marginEnd="3dp"
                android:contentDescription="Spam warning" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPAM"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:lineSpacingExtra="2dp"
            android:autoLink="none" />

        <!-- Railway preview (shown for IRCTC messages) -->
        <include
            layout="@layout/layout_railway_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <FrameLayout
                android:id="@+id/message_sim_indicator"
                android:layout_width="18dp"
                android:layout_height="11dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/message_sim_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_sim_horizontal"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/message_sim_slot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="7sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
