<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- Page Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:elevation="3dp"
        android:fitsSystemWindows="false">

        <!-- Search Bar (hidden by default) -->
        <LinearLayout
            android:id="@+id/search_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/search_back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close search"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="?attr/colorOnSurface" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:hint="Search messages..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorHint"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/search_clear_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Clear search"
                android:padding="8dp"
                android:src="@drawable/ic_close"
                android:visibility="gone"
                app:tint="?attr/colorOnSurface" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="20dp">

            <LinearLayout
                android:id="@+id/header_title_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:letterSpacing="0.015"
                    android:paddingStart="8dp"
                    android:text="@string/header_messages"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/header_delete_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/delete_selected_content_description"
                    android:padding="8dp"
                    android:src="@drawable/ic_delete"
                    android:visibility="invisible"
                    app:tint="?attr/colorOnSurface" />

                <ImageButton
                    android:id="@+id/search_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Search messages"
                    android:padding="8dp"
                    android:src="@drawable/ic_search"
                    app:tint="?attr/colorOnSurface" />

                <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Settings"
                    android:padding="8dp"
                    android:src="@drawable/ic_settings"
                    app:tint="?attr/colorOnSurface" />

            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/category_tabs"
                style="@style/Widget.Material3.TabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicatorGravity="bottom"
                app:tabIndicatorHeight="3dp"
                app:tabIndicatorFullWidth="false"
                app:tabMode="scrollable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="?attr/colorOutlineVariant" />
    </FrameLayout>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fitsSystemWindows="false">

        <!-- Setup Screen (shown when not default SMS app) -->
        <include
            android:id="@+id/setup_screen"
            layout="@layout/screen_setup_default_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fitsSystemWindows="false"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/permission_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please grant SMS permissions to use this app."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />

            <TextView
                android:id="@+id/default_sms_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app is not set as the default SMS app."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />

            <Button
                android:id="@+id/set_default_sms_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as Default SMS"
                android:visibility="gone" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/threads_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:visibility="gone" />

            <!-- Search Results -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_results_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Floating Action Button for New Message -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/new_message_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add"
            android:contentDescription="New message"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
