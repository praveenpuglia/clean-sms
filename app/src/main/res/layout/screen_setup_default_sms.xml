<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Illustration/Icon -->
        <ImageView
            android:id="@+id/setup_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_message"
            android:tint="?attr/colorPrimary"
            android:contentDescription="Messages icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/setup_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Set as Default SMS App"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="-0.01"
            app:layout_constraintTop_toBottomOf="@id/setup_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/setup_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="To send and receive messages, Clean SMS needs to be set as your default messaging app."
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/setup_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Feature List -->
        <LinearLayout
            android:id="@+id/features_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@id/setup_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tick_single"
                    android:tint="?attr/colorPrimary"
                    android:contentDescription="Check" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Send and receive messages"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tick_single"
                    android:tint="?attr/colorPrimary"
                    android:contentDescription="Check" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Automatically organize messages"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tick_single"
                    android:tint="?attr/colorPrimary"
                    android:contentDescription="Check" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Keep your inbox clutter-free"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

        </LinearLayout>

        <!-- Set Default Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/set_default_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Set as Default"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/features_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/privacy_note"
            android:layout_marginBottom="24dp" />

        <!-- Privacy Note -->
        <TextView
            android:id="@+id/privacy_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="You can change this anytime in your device settings."
            android:textAlignment="center"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/set_default_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
