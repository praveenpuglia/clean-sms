<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Header Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/new_message_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="New message"
        app:titleCentered="false"
        android:elevation="4dp" />

    <!-- Recipient input section with chips -->
    <LinearLayout
        android:id="@+id/new_message_recipients_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:background="?attr/colorSurface">

        <!-- Label for the recipient section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp" />

        <!-- Container for chips and input -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ChipGroup with inline flow layout -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/new_message_recipients_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="4dp"
                    app:singleLine="false"
                    app:selectionRequired="false" />

                <!-- Plain EditText for recipient input -->
                <EditText
                    android:id="@+id/new_message_recipient_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:hint="Type name or phone number"
                    android:inputType="text|textCapWords|textNoSuggestions"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Small spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@android:color/transparent" />

    <!-- Contact suggestions list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/new_message_contacts_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <!-- Message composer section (shown when recipient selected and no existing thread) -->
    <LinearLayout
        android:id="@+id/new_message_composer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <!-- Composer bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="bottom">

            <EditText
                android:id="@+id/new_message_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type message"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:minHeight="48dp"
                android:background="@android:color/transparent"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/new_message_send_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Send"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
